<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.quilljs.com/1.0.0/quill.snow.css" rel="stylesheet">
    <style>
        .boxHeader{
            margin-bottom: 20px;
        }
        .addHabar .box{
            width: 100% !important;
        }
        .headerCon{
            width: 50% !important;
        }
    </style>
</head>

<body>
    <%- include ('../admin.ejs') %>
    <div class="adminContainer">
        <div class="main">
            <div class="pageHeader">
                <%= name %> 
            </div>
        </div>
    <form action="/admin/pudaklar" method="POST" id="identifier">
        <% if (data != undefined) { %>
            <% var tm = data.tm%> 
            <% var ru = data.ru%> 
            <% var en = data.en%> 
        <% }else{ %>
            <% var tm = ""%> 
            <% var ru = ""%> 
            <% var en = ""%> 
        <% } %> 
        <div class="adminTable addHabar">
            <div class="box">
                <div class="boxHeader">Türkmençe ady:</div>
                <div class="headerCon">
                    <input type="text" name="tm" class="header" value="<%= tm %>">
                </div>                
            </div>
            <div class="box">
                <div class="boxHeader">Rusça ady:</div>
                <div class="headerCon">
                    <input type="text" name="ru" id="topTa" class="header" value="<%= ru %>">
                </div>
            </div>
            <div class="box">
                <div class="boxHeader">Iňlisçe ady:</div>
                <div class="headerCon">
                    <input type="text" name="en" id="topTa" class="header" value="<%= en %>">
                </div>
            </div>
            <input class="save" type="submit" value="Ýatda sakla">
        </div>
    </form>
    </div>
</body>
</html>


