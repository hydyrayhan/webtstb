<!-- formdan maglumat jemlemek -->
    <script>
        var oneTime = true;
        var submit = document.querySelector('#identifier');
        submit.addEventListener("submit",async function(e){
            e.preventDefault();
            if(oneTime){
                oneTime = false;
                var inputs = document.querySelectorAll('#identifier input');
                var text = document.querySelector("#editor .ql-editor");
                var text2 = document.querySelector("#editor2 .ql-editor");
                var text3 = document.querySelector("#editor3 .ql-editor");
                var data = {
                    tm:inputs[0].value,
                    tmheader:inputs[1].value,
                    ru:inputs[4].value,
                    ruheader:inputs[5].value,
                    en:inputs[7].value,
                    enheader:inputs[8].value,
                    text:text.innerHTML,
                    text2:text2.innerHTML,
                    text3:text3.innerHTML
                }        

                var arr = [];
                if(img != undefined){
                    arr.push(img);
                }
                if(arr.length==0){
                    alert("Surat goshmaly!!!");
                    oneTime = true;
                }else{
                    var res = await dataSend(data,'<%=host%>/industry/subCategory?id=<%=id%>');
                    if(typeof(res.id) == 'number'){
                        var data = await imgSend(arr,'<%=host%>/industry/addPic?id='+res.id+'&index='+res.index);
                        if(data.status == 200){
                            location.replace('/admin/karhanalar/<%=id%>')
                        }
                    }
                }
            }
        })
    </script>
