     <script>

        var imgs = [];
        var loadFile2 = function(event,el) {
            
            var image = document.querySelectorAll('#output');
            image[el].src = URL.createObjectURL(event.target.files[0]);
            image[el].style.width = "100%";
            image[el].style.height = "100%";

            var obj = {
                id:el,
                file:event.target.files[0]
            }
            // suraty arr salyar we eger on bar bolsa onda salanok(id gora);
            var bool = true;
            if(imgs.length == 0){
                imgs.push(obj);
            }else{
                for(var i = 0; i<imgs.length;i++){
                    if(imgs[i].id == el){
                        imgs.splice(i,1,obj);
                        bool = false;
                        break;                        
                    }
                }
                if(bool){
                    imgs.push(obj);
                }
            }
            console.log(imgs);
        };

        linkActive(2);
    </script>


