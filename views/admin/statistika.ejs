<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.quilljs.com/1.0.0/quill.snow.css" rel="stylesheet">
</head>

<body>
    <%- include ('./admin.ejs') %>
    <div class="adminContainer">
        <div class="main">
            <div class="pageHeader">
                <%= name %> 
            </div>
        </div>
    <form action="/admin/tstb" method="POST" id="identifier">
        <div class="adminTable">
            <div class="formInputs addHabar form1">
                <div class="box">
                    <div class="headerCon">
                        <label class="mazmuny" for="headtm">Telekeçiler sany:</label>
                        <input type="text" id="headtm" name="headerTM" class="header tm" required value="<%= data.bussinessman %>">
                    </div>
                    <div class="headerCon">
                        <label class="mazmuny" for="headtm">Edilen işleriň sany:</label>
                        <input type="text" id="headtm" name="headerTM" class="header tm" required value="<%= data.projects %>">
                    </div>
                    <div class="headerCon">
                        <label class="mazmuny" for="headtm">Siz bilen bile:</label>
                        <input type="text" id="headtm" name="headerTM" class="header tm" required value="<%= data.yearswithyou %>">
                    </div>
                    <div class="headerCon">
                        <label class="mazmuny" for="headtm">Telekeçiler mekdebini gutaran:</label>
                        <input type="text" id="headtm" name="headerTM" class="header tm" required value="<%= data.school %>">
                    </div>
                </div>
            </div>
    
            <div class="submitCon">
                <input class="save" type="submit" value="Ýatda sakla">
            </div>
        </div>
    </form>
    </div>
    <script>dropActive(2,9)</script>
    <script>
        var oneTime = true;
        var submit = document.querySelector("#identifier");
        submit.addEventListener('submit',async function(e){
            e.preventDefault();
            if(oneTime){
                oneTime = false;
                var inputs = document.querySelectorAll("#identifier input");
                var data = {
                    statistika1:inputs[0].value,
                    statistika2:inputs[1].value,
                    statistika3:inputs[2].value,
                    statistika4:inputs[3].value
                }
                
                var res = await dataSend(data,'<%=host%>/menu/statistikaAdmin');
                if(res.status == 200){
                    alert("Üýtgedildi");
                    oneTime = true;
                }
            }
        })
    </script>
</body>
</html>