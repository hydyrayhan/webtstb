    <!-- picture show when i choose from file -->
    <script>
        var imgCount = 0;
        var delCount = 0;
        var imgs = [];
        function takeImg(event){
            if(event.target.files[0] != undefined){
                var imgCon = document.querySelector(".imgCon");
                imgCon.innerHTML += `
                                    <div class="div pdf ${delCount}">
                                        <img class="img" src="/pictures/icon/pdfRed.png" alt="hjhjhj">
                                        <div class="imgDelete" onclick="delImg(${delCount})"><img src="/pictures/icon/delete.svg"  alt=""></div>
                                        <div class="name"></div>
                                    </div>`;
                
                var img = document.querySelectorAll(".imgCon .div .name");

                img[imgCount].textContent = event.target.files[0].name;
                var obj = {
                    id:delCount,
                    event:event.target.files[0]
                }
                imgCount+=1;
                delCount+=1;
                imgs.push(obj);
                imgLen();
            }
        }
        var firstLen = true;
        function firstWork(){
            var fileTake = document.querySelectorAll(".fileTake");
            var pic = [];
            for(var i = 0; i<fileTake.length;i++){
                pic.push(fileTake[i].textContent);
            }
            
            
            if(pic.length == 1 && pic[0] == ''){
            }else{
                var imgCon = document.querySelector(".imgCon");
                for(var i = 0; i<pic.length; i++){
                    imgCon.innerHTML += `
                                        <div class="div pdf ${delCount}">
                                            <img class="img" src="/pictures/icon/pdfRed.png" alt="hjhjhj">
                                            <div class="imgDelete" onclick="delImg(${delCount})"><img src="/pictures/icon/delete.svg"  alt=""></div>
                                            <div class="name">${pic[delCount]}</div>
                                        </div>`;
                    var obj = {
                        id:delCount,
                        event:''
                    }
                    delCount+=1;
                    imgCount+=1;
                    imgs.push(obj)
                }
                if(pic.length !== 0){
                    imgLen();
                }
            }
        }
        firstWork();

        async function delImg(san){
            var imgCon = document.querySelectorAll(".imgCon .div");
            for(var i = 0; i<imgs.length; i++){
                if(imgs[i].id == san){
                    if(imgs[i].event == ''){
                        const option = {
                            method: 'delete'
                        }
                        var res = await fetch('<%=host%>/menu/deleteLicenseFile?id=<%=data.id%>&index='+i,option);
                    }
                    imgs.splice(i,1);
                    break;
                }
            }
            
            for(var i = 0; i<imgs.length; i++){
                if(imgs[i].id == san){
                    imgs.splice(i,1);
                }
            }
            
            for(var i = 0; i<imgCon.length ; i++){
                var a = imgCon[i].classList.contains(san);
                if(a){
                    imgCon[i].remove();
                    break;
                }
            }
            
            imgCount-=1;
            imgLen();
        }

        var bool = false;
        function imgLen(){
            
            if(imgs.length==0){
                var imgsCon = document.querySelector(".imgsCon");
                var imgCon = document.querySelector(".imgCon");
                imgCon.style.height = "0";
                var old = imgsCon.innerHTML;
                imgsCon.innerHTML = `<div class="noneImg">
                                        <img style="filter: invert(1); opacity:0.7; width:30px" src="/pictures/icon/pdf.svg" alt="">
                                    </div>`+old;
                bool = true;
            }else if(imgs.length == 1 && bool){
                var imgNone = document.querySelector(".noneImg");
                imgNone.remove();
                var imgCon = document.querySelector(".imgCon");
                imgCon.style.height = "200px";
                bool = false;
            }
        }
        imgLen();

        var oneTime = true;
        var submit = document.querySelector("#identifier");
        submit.addEventListener("submit",async function(e){
            e.preventDefault();
            if(oneTime){
                var inputs = document.querySelectorAll("#identifier input");
                var area = document.querySelector(".editorCon #editor .ql-editor");
                var area2 = document.querySelector(".editorCon #editor2 .ql-editor");
                var area3 = document.querySelector(".editorCon #editor3 .ql-editor");
                var data = {
                    tmheader:inputs[0].value,
                    ruheader:inputs[3].value,
                    enheader:inputs[5].value,
                    text:area.innerHTML,
                    text2:area2.innerHTML,
                    text3:area3.innerHTML
                }
                var arr = []

                for(var i = 0; i<imgs.length; i++){
                    if(imgs[i].event !== ''){
                        arr.push(imgs[i].event);
                    }
                }

                // if(imgs.length !== 0){
                    var res = await dataSend(data,'<%=host%>/menu/editLicense?id=<%=data.id%>');
                    if(typeof(res.id) == 'number'){
                        if(arr.length>0){
                            var data = await imgSend(arr,'<%=host%>/menu/addLicenseFile?id='+res.id);
                            if(data.status == 200){
                                location.replace('/admin/ygtyyarnama');
                            }
                        }else{
                            location.replace('/admin/ygtyyarnama')
                        }
                    }
                // }else{
                //     alert('Surat ýok')
                //     oneTime=true;
                // }
            }
            
        })
    </script>
 
