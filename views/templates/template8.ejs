            <% } %>

            <div class="splide">
                <div class="splide__track">
                  <ul class="splide__list">
                      <% for( let i = 0; i < data.banner.banner.length; i++ ) { %>
                        <li class="splide__slide"><a href="//<%= data.banner.banner[i].link %>"><div><img src="<%= host %>/banners/<%= data.banner.banner[i].pic %>" alt=""></div></a></li>
                      <% } %>
